PLCMP_BIN := $(BIN_DIR)/plcmp

PLCMP_INC_DIR := $(PLCMP_DIR)/inc
PLCMP_SRC_DIR := $(PLCMP_DIR)/src
PLCMP_OBJ_DIR := $(PLCMP_DIR)/obj
PLCMP_DEP_DIR := $(PLCMP_DIR)/obj

# PL COMPILER INCLUDES
PLCMP_INCLUDES := -I $(PLCMP_INC_DIR)
PLCMP_INCLUDES += -I $(COMMON_INC_DIR)

# PL COMPILER DEFINITIONS
PLCMP_DEFINITIONS := 
PLCMP_DEFINITIONS += 

# PL COMPILER SOURCES
PLCMP_SRCS := $(wildcard $(PLCMP_SRC_DIR)/*.c)
PLCMP_SRCS_NOTDIR := $(notdir $(PLCMP_SRCS))

# PL COMPILER OBJECTS
PLCMP_OBJS := $(patsubst %.c, $(PLCMP_OBJ_DIR)/%.o, $(PLCMP_SRCS_NOTDIR))
PLCMP_OBJS_NOTDIR := $(notdir $(PLCMP_OBJS))

# PL COMPILER DEPENDENCIES
PLCMP_DEPS := $(patsubst %.o, $(PLCMP_DEP_DIR)/%.d, $(PLCMP_OBJS_NOTDIR))
PLCMP_DEPS_NOTDIR := $(notdir $(PLCMP_DEPS))

$(PLCMP_OBJ_DIR)/%.o: $(PLCMP_SRC_DIR)/%.c
	$(CC) -c $< $(FLAGS) $(PLCMP_INCLUDES) -MMD -o $@

-include $(PLCMP_DEPS)